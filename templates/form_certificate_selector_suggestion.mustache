{{!
    @template tool_certificate/form_certificate_selector_suggestion

    Template for showing certificate selector list.

        Example context (json):
    {
        "profileimageurlsmall": "1",
        "name": "1",
        "hasidentity": "1",
        "identity": "1"
    }
}}
<span>
<img height="12" src="{{profileimageurlsmall}}" alt="" role="presentation">
    <span>{{name}}</span>
    {{#hasidentity}}
        <span><small>{{identity}}</small></span>
    {{/hasidentity}}
</span>
